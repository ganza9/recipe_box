<h1>My Favorite Recipe List</h1>

<% if @recipes.any?() %>
  <ul>
    <% @recipes.each do |recipe| %>
      <li><a href="/recipe/<%= recipe.id %>"><%= recipe.name %></a>
        <% recipe.tag.each do |tag| %>
          <a href="/tag/<%= tag.id %>"><%= tag.name %></a>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no recipes yet! Please add some!</p>
<% end %>

<button type="button" name="button"><a href="/form">Add Recipe</a></button>
